@model List<AdminUserModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Schooled</title>
</head>
<body>
    <div id="wrapper">

        @Html.Partial("parts/navigation", "adminusers")

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Users</h1>
                    <table>
                        <tr>
                            <th>Created</th>
                            <th>Email</th>
                            <th>Name</th>
                        </tr>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td><a href="/admin/users/edit/?id=@user.AdminUserRowKey">@(((DateTime)(user.CreatedOn)).ToString("MM/dd/yyyy"))</a></td>
                                <td><a href="/admin/users/edit/?id=@user.AdminUserRowKey">@user.Email</a></td>
                                <td><a href="/admin/users/edit/?id=@user.AdminUserRowKey">@user.FirstName @user.LastName</a></td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-6">
                    <button id="user-add" onclick="window.location='/admin/users/add/'" type="button" class="btn btn-primary">CREATE</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
