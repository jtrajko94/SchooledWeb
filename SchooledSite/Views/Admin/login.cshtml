<body>
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="row">
                <h1>Schooled Admin Login</h1>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <form id="login-form" action="/dashboard" method="post" role="form">
                        <div class="form-group">
                            <label>Email Address</label>
                            <input id="login-email" name="email" class="form-control" type="text">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input id="login-password" name="password" class="form-control" type="password">
                        </div>
                        <button id="login-submit" type="submit" class="btn btn-default">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
